{
    "compileOnSave": false,
    "include": [
        "./pages/**/*",
        "./framework/*"
    ],
    "compilerOptions": {
        "module": "es2020",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2018",
        "typeRoots": [
            "../node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "baseUrl": "./framework/",
        "paths": {
            "@shared/*": [
                "app/shared/*"
            ],
            "@core/*": [
                "app/core/*"
            ],
            "@testing/*": [
                "testing/*"
            ],
            "@env/*": [
                "environments/*"
            ],
            "@delon/*": [
                "app/delon/*"
            ]
        }
    }
}
